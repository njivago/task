{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "noUncheckedIndexedAccess": true
  },
  "include": ["vite.config.ts", "tailwind.config.ts"]
}
